

#################################################
#                 BASH ALIASES                  #
#################################################

alias rt="cd ~/"
alias .1="cd ../"
alias .2="cd ../../"
alias .3="cd ../../../"
alias .4="cd ../../../../"
alias .5="cd ../../../../../"

# Clear Screen
alias cls="clear"

# Exit Command
alias bye="exit"

# List All Files : ll -> long list
alias ll="ls -lah"
alias la="ls -a"

# power command
alias goodnight="poweroff"
alias rbt="reboot"





