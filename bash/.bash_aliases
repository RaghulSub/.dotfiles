

#################################################
#                 BASH ALIASES                  #
#################################################

alias rt="cd ~/"
alias .1="cd ../"
alias .2="cd ../../"
alias .3="cd ../../../"
alias .4="cd ../../../../"
alias .5="cd ../../../../../"

# Clear Screen
alias cls="clear"

# Exit Command
alias bye="exit"

# List All Files : ll -> long list
alias ll="ls -lah"
alias la="ls -a"

# power command
alias goodnight="poweroff"
alias rbt="reboot"

# Docker Commands
alias lampp="docker run -d -p 80:80 -p 443:443 -p 3306:3306 tomsik68/xampp"


