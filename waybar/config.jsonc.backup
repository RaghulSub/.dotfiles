{
  "layer": "  "c  "custom/cpu": {
    "format": " {output}%",
    "exec": "sh -c \"top -bn1 | grep 'Cpu(s)' | awk '{print int(100-$8)}'\"",
    "interval": 5,
    "tooltip": "CPU Usage"
  },cpu": {
    "format": " {output}%",
    "exec": "sh -c \"top -bn1 | grep 'Cpu(s)' | awk '{print int(100-$8)}'\"",
    "interval": 5,
    "tooltip": "CPU Usage"
  },  "position": "top",
  "margin-top": 8,
  "modules-left": ["custom/launcher", "hyprland/workspaces"],
  "modules-center": ["clock"],
  "modules-right": ["custom/ip", "custom/cpu", "custom/ram", "pulseaudio", "bluetooth", "network", "battery", "tray"],
  "custom/ip": {
    "format": "󰩟 {output}",
    "exec": "hostname -i | awk '{print $1}'",
    "interval": 10,
    "tooltip": "IP Address"
  },

  "custom/cpu": {
    "format": " {output}%",
  "exec": "sh -c \"top -bn1 | grep 'Cpu(s)' | awk '{print (NF>=8 ? 100-$8 : 0)}'\"",
    "interval": 5,
    "tooltip": "CPU Usage"
  },

  "custom/ram": {
    "format": "󰍛 {output} MB",
  "exec": "sh -c \"free -m | awk '/Mem:/ {print $3}' || echo 0\"",
    "interval": 5,
    "tooltip": "RAM Used (MB)"
  },

  "custom/launcher": {
    "format": "",
    "tooltip": false,
    "on-click": "wofi --show drun"
  },

  "hyprland/workspaces": {
    "format": "{icon}",
    "on-click": "hyprctl dispatch workspace {id}"
  },

  "clock": {
    "format": "󰥔 {:%H:%M   %A, %d %b}",
    "tooltip-format": "{:%A-%B-%d %H:%M}",
    "interval": 60
  },

  "pulseaudio": {
    "format": "  {volume}%",
    "format-muted": "󰖁 Muted",
    "on-click": "pavucontrol"
  },

  "network": {
    "format-wifi": "  {essid}",
    "format-ethernet": "󰈀 {ifname}",
  "format-disconnected": "󰖪 Disconnected"
  },

  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": " {capacity}%",
    "format-icons": ["", "", "", "", ""],
    "tooltip": true,
  "interval": 1
  },

  "bluetooth": {
    "format": " {status}",
    "format-connected": " {device_alias}",
    "format-disabled": "",
    "on-click":"kitty -e bluetui"
  },

  "tray": {
    "icon-size": 16,
    "spacing": 10
  }
}
